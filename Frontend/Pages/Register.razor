@page "/register"
@using Frontend.Components
@using Frontend.Layout
@layout Empty

<Navigation />

<h3>Register</h3>

<EditForm Model="@RegisterModel" OnValidSubmit="@RegisterUser">
    <label for="first-name">First Name</label><br />
    <input type="text" name="first-name" @bind-value="RegisterModel.FirstName" />
    <br />
    <label for="last-name">Last Name</label><br />
    <input type="text" name="last-name" @bind-value="RegisterModel.LastName" />
    <br />
    <label for="username">Username</label><br />
    <input type="text" name="username" @bind-value="RegisterModel.Username" />
    <br />
    <label for="email">Email</label><br />
    <input type="text" name="email" @bind-value="RegisterModel.Email" />
    <br />
    <label for="password">Password</label><br />
    <input type="password" name="password" @bind-value="RegisterModel.Password" />
    <br />
    <label for="repeat-password">Repeat Password</label><br />
    <input type="password" name="repeat-password" @bind-value="RegisterModel.RepeatPassword" />
    <br />
    <br />
    <button type="submit">Register</button>
</EditForm>

